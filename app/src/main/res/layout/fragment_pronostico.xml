<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/cabecera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cabecera"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/temperaturaHoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="130sp"
                android:typeface="sans"
                android:layout_marginBottom="0dp"/>

            <TextView
            android:id="@+id/minHoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min"
            android:textSize="20sp"
                android:layout_below="@+id/temperaturaHoy"
                android:layout_alignLeft="@+id/temperaturaHoy"
                android:layout_alignStart="@+id/temperaturaHoy" />

            <TextView
                android:id="@+id/maxHoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max"
                android:textSize="20sp"
                android:layout_below="@+id/minHoy"
                android:layout_alignLeft="@+id/minHoy"
                android:layout_alignStart="@+id/minHoy" />



            <TextView
                android:id="@+id/grado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grado"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/temperaturaHoy"
                android:layout_toEndOf="@+id/temperaturaHoy"
                android:layout_marginTop="20dp" />




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/iconHoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/pronosticoMa침ana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pron칩stico para ma침ana"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/iconMa침ana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="40dp"/>

    </RelativeLayout>

</LinearLayout>
