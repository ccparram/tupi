<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cabecera"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



            <TextView
                android:id="@+id/temperaturaHoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="130sp"
                android:typeface="sans"
                android:layout_below="@+id/cabecera"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
            android:id="@+id/minHoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min"
            android:textSize="20sp"
                android:layout_alignBottom="@+id/temperaturaHoy"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/maxHoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max"
                android:textSize="20sp"
                android:layout_toRightOf="@id/minHoy"
                android:layout_alignTop="@+id/minHoy"
                android:layout_marginLeft="15dp"/>



            <TextView
                android:id="@+id/grado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grado"
                android:textSize="25sp"
                android:layout_alignTop="@+id/temperaturaHoy"
                android:layout_toRightOf="@+id/temperaturaHoy"
                android:layout_toEndOf="@+id/temperaturaHoy"
                android:layout_marginTop="25dp"/>


        <ImageView
            android:id="@+id/iconHoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cabecera"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/pronosticoMa침ana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pron칩stico para ma침ana"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/iconMa침ana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="40dp"/>

    </RelativeLayout>

</LinearLayout>
